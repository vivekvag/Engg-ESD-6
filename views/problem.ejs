	<body>
		<!-- Problem Solving  -->
		<main>
			<form class="problem-solving" method="post" action="/submit-code">
				<div class="property">
					<h2 class="question">What is the Question?</h2>
					<select class="problem-select" name="language">
						<option selected disabled hidden>Choose your language</option>
						<option value="python3">Python 3</option>
						<option value="php">PHP</option>
						<option value="java">Java</option>
						<option value="c">C</option>
					</select>
				</div>
				<div class="problem-row">
					<div class="input-code">
						<div class="input-form">
							<textarea name="code" id="" class="input">
<%= codeElements.code %></textarea
							>
						</div>
					</div>

					<!-- Ouput Code -->
					<div class="output-code">
						<div class="output-form">
							<textarea name="" id="" class="output" readonly>
<%= codeElements.output%></textarea
							>
						</div>
					</div>
				</div>
				<div class="problem-execute">
					<button type="submit" class="problem-submit">Execute</button>
				</div>
			</form>
		</main>

